<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:padding="5dp">

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="20dp" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginBottom="5dp" android:layout_marginTop="5dp" android:background="@drawable/edit" android:textSize="25sp" android:textColor="@color/textGreenColor" android:text="World Information"/>

<lecho.lib.hellocharts.view.PieChartView android:layout_height="250dp" android:layout_width="match_parent" android:padding="10dp" android:id="@+id/chart" android:layout_margin="10dp"/>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginLeft="20dp">

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:text="Total cases" android:id="@+id/totalLabelColor" android:layout_weight="1" android:drawablePadding="5dp" android:drawableLeft="@drawable/totalcaselabel"/>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:text="Total Death " android:id="@+id/deathLabelColor" android:layout_marginLeft="20dp" android:layout_weight="1" android:drawablePadding="5dp" android:drawableLeft="@drawable/deathcaseslabel"/>

</LinearLayout>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="10dp" android:layout_marginLeft="20dp">

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:text="Active cases" android:id="@+id/serouusLabelColor" android:layout_weight="1" android:drawablePadding="5dp" android:drawableLeft="@drawable/seriouscaseslabel"/>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:text="Total Recovered" android:id="@+id/recoveredLabelColor" android:layout_marginLeft="20dp" android:layout_weight="1" android:drawablePadding="5dp" android:drawableLeft="@drawable/recoverycaseslabel"/>

</LinearLayout>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="20dp" android:layout_marginBottom="5dp" android:background="@drawable/edit">

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:textSize="20sp" android:textColor="#fff" android:text="Total Confirmed Cases" android:layout_marginLeft="0dp"/>

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginTop="20dp" android:textSize="30sp" android:textColor="#43E272" android:text="6,546,842" android:id="@+id/totalConfirmed" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_gravity="center">

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAlignment="textEnd" android:textSize="17sp" android:textColor="#43E272" android:text="Daily Increament: " android:layout_weight="1" android:layout_gravity="right" tools:ignore="RtlCompat" android:layout_toLeftOf="@id/increament" android:layout_centerVertical="true"/>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="17sp" android:textColor="#43E272" android:text="656565" android:id="@+id/todayNewCases" android:layout_weight="1" android:layout_gravity="right" android:layout_centerVertical="true" android:layout_below="@id/todayNewCases"/>

</LinearLayout>

</LinearLayout>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="20dp" android:layout_marginBottom="5dp" android:background="@drawable/edit">

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:textSize="20sp" android:textColor="#fff" android:text="Total Recovered" android:layout_marginLeft="0dp"/>

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginTop="20dp" android:textSize="30sp" android:textColor="#43E272" android:text="6,546,842" android:id="@+id/totalRecovered" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

</LinearLayout>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="20dp" android:layout_marginBottom="5dp" android:background="@drawable/edit">

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:textSize="20sp" android:textColor="#fff" android:text="Total Deceased" android:layout_marginLeft="0dp"/>

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginTop="20dp" android:textSize="30sp" android:textColor="#43E272" android:text="6,546,842" android:id="@+id/totalDeceased" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_gravity="center">

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAlignment="textEnd" android:textSize="17sp" android:textColor="#43E272" android:text="Daily Increament: " android:id="@+id/text" android:layout_weight="1" android:layout_gravity="right" tools:ignore="RtlCompat" android:layout_toLeftOf="@id/increament" android:layout_centerVertical="true"/>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="17sp" android:textColor="#43E272" android:text="656565" android:id="@+id/todayDeath" android:layout_weight="1" android:layout_gravity="right" android:layout_centerVertical="true" android:layout_below="@id/todayDeath"/>

</LinearLayout>

</LinearLayout>


<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="20dp" android:layout_marginBottom="5dp" android:background="@drawable/edit">

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:textSize="20sp" android:textColor="#fff" android:text="Total Currently Infected" android:layout_marginLeft="0dp"/>

<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginTop="20dp" android:textSize="30sp" android:textColor="#43E272" android:text="6,546,842" android:id="@+id/totalInfected" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

</LinearLayout>

</LinearLayout>

</ScrollView>
